<div class="container">
  <br><br>
  <div>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <button type="button" class="btn btn-warning rounded pull-right" >
        <%= link_to new_admin_restaurant_path do %>
          <span class="glyphicon glyphicon-plus">New Restaurant</span>
        <% end %>
      </button>  
      <br>
      <table class="table table-hover"> 
        <h3 class="card-heading text-center">餐廳一覽表</h3>
        <ul>
            <thead>
              <div class="row">
                <tr class="bg-primary">
                  <td class="col-md-3 text-center">餐廳照片</td> 
                  <td class="col-md-6">餐廳訊息</td>           
                  <div class="col-md-1 text-center"><td>檢視</td>
                  <td lass="col-md-1 text-center">編輯</td>
                  <td class="col-md-1 text-center">刪除</td>
                </tr>
              </div>
            </thead>

            <tbody>
              
                <% @restaurants.each do |restaurant| %>
                  <tr>
                    <th scope="row" class="col-md-3"> 
                      <% if restaurant.image? %>
                         <%= image_tag restaurant.image, width: '150px', class: "img-responsive center-block img-circle" %> 
                      <% else %>
                        <h1 class="text-center"><span class="glyphicon glyphicon-picture"></span></h1>
                      <% end %>
                     </th>
                    <div class="col-md-6"><td>
                      餐廳名稱: <%=restaurant.name %><br>
                      餐廳類型: <%=restaurant.category.name %><br>
                      餐廳電話: <%=restaurant.tel %><br>
                      餐廳地址: <%=restaurant.address %><br>
                      營業時間: <%=restaurant.opening_hours %>
                    </td></div>
                    <div class="col-md-1"><td><%= link_to admin_restaurant_path(restaurant) do %>
                      <h4 class="text-center"><span class="glyphicon glyphicon-search"></span></h4>
                    <% end %>
                    </td></div>
                    <div class="col-md-1"><td><%= link_to edit_admin_restaurant_path(restaurant) do %>
                      <h4 class="text-center"><span class="glyphicon glyphicon-pencil"></span></h4>
                    <% end %>
                    </td></div>
                    <div class="col-md-1"><td><%= link_to admin_restaurant_path(restaurant), method: :delete, data:{ confirm: "確定刪除此餐廳?" } do %>
                      <h4 class="text-center"><span class="glyphicon glyphicon-trash"></span></h4>
                    <% end %>
                    </td></div>
                  </tr>
                <% end %> 
              
            </tbody>
        </ul>
      </table> 

      <div div class="text-center">
        <%= paginate @restaurants %>
      </div>
    </div>
  </div>
</div>
