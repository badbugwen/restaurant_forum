<!-- user's profie page -->
<div class="container">
  <div class="row">
    <div class=" well col-md-12">

      <!-- user's image -->
      <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
        <% if @user.avatar? %>
          <%= image_tag @user.avatar, width: '300px', class: "img-responsive center-block" %>
        <% else %>
          <h1 class="text-center"><span class="glyphicon glyphicon-user"></span></h1>
        <% end %>
      </div>  

      <!-- user's data -->
      <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9">
        <ul class="list-unstyled">
          <li><h1>
            <% if @user.name %>
              <%= @user.name %>
            <% else %>
              <%= @user.email.split("@").first %> 
            <% end %>       
          </h1></li>
          <li><%= @user.email %></li>
          <li><%= @user.intro if @user.intro %></li>
        </ul>
        <!-- link to edit user's profile -->
        <%= link_to 'Edit Profile', edit_user_path(id: @user.id), class: "btn btn-primary" if current_user == @user %>
      </div>
    </div>
  </div>
</div>    