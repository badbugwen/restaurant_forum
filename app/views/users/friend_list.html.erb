 <div class="container">
<!-- title -->
  <div class="text-center">
    <br>
    <h2><%= @user.name %>的朋友們</h2>
    <br><br>
    <%= link_to '返回前頁',:back, class: "btn btn-default" %> 
  </div>
  <br><br>
  <!-- user's friend list -->
  <div class="row">
    <% @user.all_friends.each do |user| %> 
    <div class="col-sm-6 col-md-3 col-lg-2">
      <%= render partial: "shared/user_in_thumbnail", locals: {user: user} %>
    </div>
    <% end %> 
  </div>  
</div>
 