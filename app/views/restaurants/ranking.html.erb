<div class ="container">
  <!-- feesds and categories nav -->
  <ul class="nav nav-pills nav-pills-center ">
    <!-- 當下頁面按鈕為active -->
    <li role="presentation" class="nav_inactive"><%= link_to "最新動態", feeds_restaurants_path %></li>
    <li role="presentation" class="active"><%= link_to "熱門餐廳", ranking_restaurants_path %></li>
    <li role="presentation"><%= link_to "全部餐廳", root_path %></li> 
    <!-- 下拉式各類餐廳 -->
    <li role="presentation" class="dropdown <%= "active" if @category %>">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        <% if @category %>
          <%= @category.name %>
        <% else %>  
          選擇分類
        <% end %>  
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <% @categories.each do |category| %>
          <li role="presentation">
            <%= link_to category.name, category_path(category) %>
          </li>
        <% end %> 
      </ul>
    </li>    
  </ul>
  <br>
  <h2 class="text-center">十大熱門餐廳</h2>
  <br>
  <!-- 依照收藏數降冪排序取前10位熱門餐廳 -->
  <% @top_restaurants.each do |restaurant| %> 
    <div class="panel panel-default">
      <div class="panel-body">  
        <div class ="row">
          <div class ="col-sm-5 col-md-2">
            <!-- 若無照片則以glyphicon代替 -->
            <% if restaurant.image? %>
              <%= image_tag restaurant.image, height: '100px', class: "img-responsive" %>
            <% else %>
              <h1 class="text-center"><span class="glyphicon glyphicon-picture"></span></h1>
            <% end %>
          </div>  
          <div class="col-sm-7 col-md-8">
            <h4><%= restaurant.name %>  
              <span class="label label-default">
                收藏數:
                <% if restaurant.favorites_count == nil %>
                0
                <% else %>
                  <%=restaurant.favorites_count %>
                <% end %>    
              </span>
            </h4>
            <p><%= restaurant.description %></p>
            <br>
            <%= link_to 'Show', restaurant_path(restaurant), class: "btn btn-primary" %>
            <!-- 呼叫收藏按鈕樣板 -->
            <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
          </div>
        </div>
      </div>  
    </div>
  <% end %> 
</div>