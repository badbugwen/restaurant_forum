<div class="container">
  <div class="row">
  <!-- categories nav -->
  <ul class="nav nav-pills nav-pills-center">
    <li role="presentation" class="nav-link active"><%= link_to "全部餐廳", root_path %></li>

    <% @categories.each do |category| %>
      <li role="presentation" class="nav-item"><%= link_to category.name, category_path(category) %></li>
    <% end %>  
  </ul>

  <!-- restaurants List -->
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="card">
          <% if restaurant.image? %>
            <%= image_tag restaurant.image, width: '150px', class: "card-img-top rounded" %> 
          <% else %>
            <h1 class="text-center"><span class="glyphicon glyphicon-picture"></span></h1>
          <% end %>

          <div class="card-body">
            <h3 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <span class="badge badge-primary"><%= restaurant.category.name %></span>
            <p class="card-text"><%= truncate(restaurant.description, length: 80) %></p>
          </div>
        </div>  
      </div>
    <% end %> 
  
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>

  </div>  
</div>  