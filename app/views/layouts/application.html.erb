<!DOCTYPE html>
  <html>

    <head>
      <title>RestaurantForum</title>

      <!-- 網頁圖標favicon.ico，可顯示icon於標題列 -->
      <%= favicon_link_tag 'favicon.ico' %>
      <%= csrf_meta_tags %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

      <!-- 導覽列 -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">

        <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

            <!-- nav brand,尚未成功加入nav brand image與文字共同顯示 -->
            <%=link_to "Kids friendly 親子餐廳評論網", root_path, class: "navbar-brand" %>
          </div>
   
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="pull-right text-right nav navbar-nav">

              <!-- 當使用者登入/未登入，顯示不同選項 -->
              <% if current_user %> 

                <!-- 當使用者為admin，顯示後臺連結 -->
                <li>  
                  <%= link_to '<span class="glyphicon glyphicon-list-alt"></span>'.html_safe,admin_restaurants_path if current_user.admin? %>
                </li> 
                <li><p class="navbar-text">Hi, <%= current_user.email %></p></li>
                <li><%= link_to '<span class="glyphicon glyphicon-log-out"></span>'.html_safe,destroy_user_session_path, method: :delete %></li>
                <li><%= link_to '<span class="glyphicon glyphicon-user"></span>'.html_safe, edit_user_path(:id) %></li>

              <!-- 當使用者未登入，顯示註冊&登入 -->  
              <% else %>
                <li><%= link_to '註冊', new_user_registration_path %></li>
                <li><%= link_to '登入', new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>  

      <!-- 用flash提示action訊息 -->
      <% if flash[:notice] %>
        <div class="container">
          <div class="row">
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <%= notice %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- 用flash提示錯誤警告訊息 -->
      <% if flash[:alert] %>
        <div class="container">
          <div class="row">
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <%= alert %>
            </div>
          </div>
        </div>
      <% end %>    

      <!-- 呼叫action對應之html.erb -->
      <%= yield %>

    </body>
  </html>

