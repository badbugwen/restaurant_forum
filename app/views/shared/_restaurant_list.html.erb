 <div class="container">
  <!-- nav bar -->
  <%= render partial: "shared/navBar" %>
  <br>
  <!-- restaurants List -->
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="thumbnail">
          <% if restaurant.image? %>
            <%= image_tag restaurant.image, height:'50%', class: "img-thumbnail" %> 
          <% else %>
            <h1 class="text-center"><span class="glyphicon glyphicon-picture"></span></h1>
          <% end %>

          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %> </h3>
            <span class="label label-success"><%= restaurant.category.name %></span>
            <p class="card-text"><%= truncate(restaurant.description, length: 80) %></p>
            <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
            <%= render partial: "shared/like", locals: {restaurant: restaurant} %>
          </div>
        </div>
      </div>  
    <% end %>      
  </div> 
  <!-- æœ‰generate kaminari paginate bootstrap style -->
  <div class="text-center"><%= paginate @restaurants %></div>
</div>    