<% if user != current_user %>  
  <% if current_user.following?(user) %>
    <%= link_to '停止<span class="glyphicon glyphicon-eye-close"></span>關注'.html_safe, followship_path(user), method: :delete, class: "btn btn-default active" %>
  <% else %>
    <%= link_to '開始<span class="glyphicon glyphicon-eye-open"></span>關注'.html_safe, followships_path(following_id: user), method: :post, class: "btn btn-info active" %>
  <% end %>
<% end %>  