<% if restaurant.is_liked?(current_user) %>
  <%= link_to unlike_restaurant_path(restaurant), method: :post, class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-thumbs-up"></span> <span class="badge"><%= restaurant.likes.count %></span>
  <% end %>  
<% else %>  
  <%= link_to like_restaurant_path(restaurant), method: :post, class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-thumbs-up"></span> <span class="badge"><%= restaurant.likes.count %></span>
  <% end %>  
<% end %>  